<Application x:Class="Elvex.Toolbox.WPF.ViewApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Elvex.Toolbox.WPF.ViewApp"
             xmlns:elvex="http://elvex.toolbox.ui/">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- Global Resources -->
                <ResourceDictionary Source="pack://application:,,,/Elvex.Toolbox.WPF.UI;component/Resources/Converters.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Elvex.Toolbox.WPF.UI;component/Resources/Global.xaml" />

                <!-- Dark Theme -->
                <ResourceDictionary Source="pack://application:,,,/Elvex.Toolbox.WPF.UI;component/Resources/Themes/Dark/DarkThemeResources.xaml" />
                <!--<ResourceDictionary Source="pack://application:,,,/Elvex.Toolbox.WPF.UI;component/Resources/Themes/Light/LightThemeResources.xaml" />-->

                <!-- Avalon -->
                <ResourceDictionary Source="pack://application:,,,/Elvex.Toolbox.WPF.UI.Avalon;component/Resources/ToolboxTheme.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
